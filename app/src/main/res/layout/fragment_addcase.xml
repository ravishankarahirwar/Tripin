<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >


    <EditText
        android:id="@+id/edit_case"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Case"
        android:singleLine="true"
        android:textColor="@color/light_dark_gray"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <EditText
        android:id="@+id/edit_lawfirm"
        android:layout_below="@+id/edit_case"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:hint="Enter Law Firm"
        android:textColor="@color/light_dark_gray"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <EditText
        android:id="@+id/edit_caseno"
        android:layout_below="@+id/edit_lawfirm"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:hint="Enter Case No."
        android:textColor="@color/light_dark_gray"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <EditText
        android:id="@+id/edit_caseamount"
        android:layout_below="@+id/edit_caseno"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:hint="Enter Claim Amount"
        android:inputType="numberDecimal"
        android:textColor="@color/light_dark_gray"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <EditText
        android:id="@+id/edit_casestage"
        android:layout_below="@+id/edit_caseamount"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Now/Result"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/light_dark_gray"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <EditText
        android:id="@+id/edit_excasestage"
        android:layout_below="@+id/edit_casestage"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:hint="Enter Chances or Prospects of Success"
        android:textColor="@color/light_dark_gray"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="false"
        android:id="@+id/button_save"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edit_excasestage"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
       />


</RelativeLayout>
</ScrollView>